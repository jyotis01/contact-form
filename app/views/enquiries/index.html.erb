<div class="container-contact100">
	<div class="wrap-contact100">
		<%= form_with scope: :enquiry, url: enquiries_path, local: true, class: 'contact100-form validate-form' do |form| %>
			<% if @enquiry.errors.any? %>
				<div id='error_explanation'>
					<h5><%= (t 'form.error') %></h5>
					<% @enquiry.errors.full_messages.each do |msg| %>
						<p><%= msg %></p>
					<% end %>
				</div>
			<% end %>
			<span class="contact100-form-title">
				<%= (t 'form.send_msg.title') %>
			</span>
			<label class="label-input100" for="first-name"><%= (t 'form.name.title') %></label>
			<div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="Type first name">
				<%= form.text_field :firstname, class: 'input100', placeholder: (t 'form.name.first') %>
				<span class="focus-input100"></span>
			</div>

			<div class="wrap-input100 rs2-wrap-input100 validate-input" data-validate="Type last name">
				<%= form.text_field :lastname, class: 'input100', placeholder: (t 'form.name.last') %>
				<span class="focus-input100"></span>
			</div>

			<label class="label-input100" for="email"><%= (t 'form.email.title') %></label>
			<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
				<%= form.text_field :email, class: 'input100', placeholder: (t 'form.email.example') %>
				<span class="focus-input100"></span>
			</div>

			<label class="label-input100" for="phone"><%= (t 'form.phone.title') %></label>
			<div class="wrap-input100">
				<%= form.text_field :phone_number, class: 'input100', placeholder: (t 'form.phone.example') %>
				<span class="focus-input100"></span>
			</div>

			<label class="label-input100" for="message"><%= (t 'form.message.title') %></label>
			<div class="wrap-input100 validate-input" data-validate = "Message is required">
				<%= form.text_area :message, size: '50x10', class: 'input100', placeholder: (t 'form.message.example') %>
				<span class="focus-input100"></span>
			</div>

			<div class="container-contact100-form-btn">
				<%= form.submit (t 'form.send_msg.btn'), class: 'contact100-form-btn' %>
			</div>
		<% end %>

		<div class="contact100-more flex-col-c-m" style="background-image: url('images/bg-01.jpg');">
			<div class="flex-w size1 p-b-47">
				<div class="txt1 p-r-25">
					<span class="lnr lnr-map-marker"></span>
				</div>

				<div class="flex-col size2">
					<span class="txt1 p-b-20">
						<%= (t 'address.title') %>
					</span>

					<span class="txt2">
						<%= (t 'address.full_address') %>
					</span>
				</div>
			</div>

			<div class="dis-flex size1 p-b-47">
				<div class="txt1 p-r-25">
					<span class="lnr lnr-phone-handset"></span>
				</div>

				<div class="flex-col size2">
					<span class="txt1 p-b-20">
						<%= (t 'contact.title') %>
					</span>

					<span class="txt3">
						<%= (t 'contact.number') %>
					</span>
				</div>
			</div>

			<div class="dis-flex size1 p-b-47">
				<div class="txt1 p-r-25">
					<span class="lnr lnr-envelope"></span>
				</div>

				<div class="flex-col size2">
					<span class="txt1 p-b-20">
						<%= (t 'support.title') %>
					</span>

					<span class="txt3">
						<%= (t 'support.email') %>
					</span>
				</div>
			</div>
		</div>
	</div>
</div>
<div class='language-selector'>
  <%= (t 'language.title') %>
  <ul>
    <li><%= link_to (t 'language.en'), current_page_params.merge(locale: 'en') %></li>
    <li><%= link_to (t 'language.hi'), current_page_params.merge(locale: 'hi') %></li>
  </ul>
</div>